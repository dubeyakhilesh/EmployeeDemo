<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".employeeDetails.EmployeeDetails">

    <include layout="@layout/tool_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4">

        <ImageView
            android:id="@+id/imgMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/margin_medium"
        android:layout_weight=".4">

        <TextView
            android:id="@+id/txtEmpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/appblack"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEmpDesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/appblack"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEmpAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@color/appblack"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnApplyLeave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employeeDetail_applyLeave"
            android:layout_gravity="left|center_vertical" />

        <Button
            android:id="@+id/btnViewLeave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employeeDetail_viewLeave"
            android:layout_gravity="right|center_vertical" />

    </FrameLayout>


</LinearLayout>